<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:padding="15dp"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_login_title"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/et_login_username"
            android:id="@+id/et_login_username"
            android:inputType="textEmailAddress"/>

    <EditText android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="5dp"
              android:text="@string/et_login_password"
              android:id="@+id/et_login_password"
              android:inputType="textPassword"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_login_connexion"
            android:id="@+id/bt_login_connexion"
            />
    <LinearLayout
            android:id="@+id/ly_progress"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="invisible">
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.Holo.ProgressBar.Small"
                android:layout_marginRight="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_loading"/>
    </LinearLayout>

</LinearLayout>

